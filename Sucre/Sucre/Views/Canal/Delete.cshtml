@model Sucre_Models.CanalTableM
@{
    Layout = "_Layout";
    ViewData["Title"] = "Canal - Remove";
}

<div class="container">
    <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <input asp-for="@Model.canalM.Id" hidden>        
        <div class="row card p-3 bg-white box-shadow">
            <div class="card-header">
                @* <h2 class="text-primary pl-3">Add Parameter Type</h2>                 *@
                <h2 class="text-primary-custom pl-3">Remove Canal (@Model.canalM.Id.ToString())</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-8">
                        <div class="row py-2">
                            <div class="col-4">
                                @Html.LabelFor(model => model.canalM.Name, null, null)
                                @* <label asp-for="canalM.Name"></label> *@
                            </div>
                            <div class="col-8">
                                @Html.TextBoxFor(model => model.canalM.Name,null, new{@class="form-control", @readonly="readonly"})
                                @* <input asp-for="canalM.Name" class="form-control" disabled />                                 *@
                            </div>
                        </div>
                        <div class="row py-2">
                            <div class="col-4">
                                @Html.LabelFor(model => model.canalM.Description, null, null)
                                @* <label asp-for="canalM.Description"></label> *@
                            </div>
                            <div class="col-8">
                                @Html.TextAreaFor(model => model.canalM.Description, 0, 1, new{@class="form-control", @readonly="readonly"})
                                @* <textarea asp-for="canalM.Description" class="form-control" disabled></textarea> *@
                            </div>
                        </div>
                        <div class="row py-2">
                            <div class="col-4">
                                @Html.LabelFor(model => model.ParameterTypeName, null, null)
                                @* <label asp-for="ParameterTypeName"></label> *@
                            </div>
                            <div class="col-8">
                                @Html.TextBoxFor(model => model.ParameterTypeName,null, new{@class="form-control", @readonly="readonly"})
                                @* <input asp-for="ParameterTypeName" class="form-control" disabled /> *@
                            </div>
                        </div>
                        <div class="row py-2">
                            <div class="col-4">
                                @Html.LabelFor(model => model.canalM.Reader, null, null)
                                @* <label asp-for="canalM.Reader"></label> *@
                            </div>
                            <div class="col-8">
                                @Html.CheckBoxFor(model => model.canalM.Reader, new{@class="form-check form-check-input", @disabled="disabled"})
                                @* <input type="checkbox" asp-for="canalM.Reader" class="form-check form-check-input" disabled /> *@
                            </div>
                        </div>
                        <div class="row py-2">
                            <div class="col-4">
                                @Html.LabelFor(model => model.canalM.SourceType, null, null)
                                @* <label asp-for="canalM.SourceType"></label> *@
                            </div>
                            <div class="col-8">
                                @Html.TextBoxFor(model => model.canalM.SourceType,null, new{@class="form-control", @readonly="readonly", @type="number"})
                                @* <input type="number" asp-for="canalM.SourceType" class="form-control" disabled /> *@
                            </div>
                        </div>
                        <div class="row py-2">
                            <div class="col-4">
                                @Html.LabelFor(model => model.canalM.AsPazEin, null, null)
                                @* <label asp-for="canalM.AsPazEin"></label> *@
                            </div>
                            <div class="col-8">
                                @Html.CheckBoxFor(model => model.canalM.AsPazEin, new{@class="form-check form-check-input", @disabled="disabled"})
                                @* <input type="checkbox" asp-for="canalM.AsPazEin" class="form-check form-check-input" disabled /> *@
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        Keep
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row py-2">
                    <div class="col">
                        <input type="submit" class="btn btn-danger w-100" value="Remove" />                        
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
