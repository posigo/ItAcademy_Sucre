@model ICollection<CanalTableM>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Canals - Index";
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Launch static backdrop modal
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Understood</button>
            </div>
        </div>
    </div>
</div>

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Channel List</h2>
        </div>
        <div class="col-6 text-end">           
            <a asp-controller="Canal" asp-action="Upsert" class="btn btn-primary-custom">
                Add channel
            </a>
        </div>
    </div>

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead valign="middle">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Parameter Type</th>
                    <th>In Work</th>
                    <th>Source Type</th>
                    <th>Use AsPaz</th>
                    <th></th>
                </tr>
                
            </thead>
            
            <tbody>
                @foreach (var obj in Model)
                {   
                    <tr>
                        @if (obj.canalM.PointMs == null || obj.canalM.PointMs.Count() == 0)
                        {
                            @*<td width="3%" rowspan="2" valign="top">*@
                            <td width="5%" valign="top">
                                <a class="btn btn-primary-custom" asp-controller="" asp-action="" asp-route-Id="@obj.canalM.Id">
                                    @obj.canalM.Id
                                </a>
                            </td>
                        }
                        else
                        {
                            <td width="5%">@obj.canalM.Id</td>
                        }
                        <td width="10%">@obj.canalM.Name</td>
                        <td width="25%">@obj.canalM.Description</td>
                        <td width="15%">@obj.ParameterTypeName</td>
                        <td width="5%">
                            @if (obj.canalM.Reader)
                            {
                                <p class="">YES</p>
                            }
                            else
                            {
                                <p class="">NO</p>
                            }                                    
                        </td>
                        <td width="15%">
                            @if (obj.canalM.SourceType == 0)
                            {
                                <p class="">Device</p>
                            }
                            @if (obj.canalM.SourceType == 1)
                            {
                                <p class="">External</p>
                            }
                            @if (obj.canalM.SourceType == 2)
                            {
                                <p class="">Manual</p>
                            }                                    
                        </td>
                        <td width="5%">
                            @if (obj.canalM.AsPazEin)
                            {
                                if (obj.canalM.AsPazM != null)
                                {
                                    @* ICollection<AsPazCanalM> asPazCanalMs = new HashSet<AsPazCanalM>();
                                    AsPazCanalM asPazCanalM = new AsPazCanalM();
                                    asPazCanalM.AsPazM = obj.canalM.AsPazM;
                                    asPazCanalM.CanalId = obj.canalM.Id;
                                    asPazCanalM.CanalName = obj.canalM.Name;
                                    asPazCanalMs.Add(asPazCanalM);
                                    <a class="btn btn-primary-custom" asp-controller="Canal", asp-action="IndexAsPaz", asp-route-pazCanalMs="@asPazCanalMs">
                                        YES
                                    </a> *@
                                    <a class="btn btn-primary-custom" asp-controller="Canal", asp-action="IndexAsPaz", asp-route-CanalId="@obj.canalM.Id">
                                        YES
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-danger" asp-controller="Canal", asp-action="UpsertAsPaz", asp-route-Id="0", asp-route-canalId="@obj.canalM.Id", asp-route-canalName="@obj.canalM.Name">
                                        YES
                                    </a>
                                    
                                }
                                
                            }
                            else
                            {
                                <p class="">NO</p>
                            }
                        </td>
                        <td class="text-center w-auto">
                            <a asp-controller="Canal" asp-action="Upsert" asp-route-Id="@obj.canalM.Id" class="btn btn-primary-custom m-auto">
                                Edit
                            </a>
                            <a asp-controller="Canal" asp-action="Delete" asp-route-Id="@obj.canalM.Id" class="btn btn-danger m-auto">
                                Del
                            </a>                            
                        </td>
                    </tr>
                    @*@if (obj.canalM.AsPazEin)
                    {
                        <tr>
                            <td colspan="7">
                                <details>
                                    <summary>ffffff</summary>
                                    <p>@obj.canalM.AsPazM.High</p>
                                    <p>@obj.canalM.AsPazM.Low</p>
                                </details>
                            </td>
                        </tr>
                    }*@
                    
                }
            </tbody>
        </table>
    }   
    else
    {
        <p class="text-danger h4">Channel list is empty!</p>
    }
</div>