@model IEnumerable<EnergyM>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Energies - Index";
}

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of types of Energy</h2>
        </div>
        <div class="col-6 text-end">           
            <a asp-controller="Energy" asp-action="Upsert" class="btn btn-primary-custom">
                Add a type of energy
            </a>
        </div>
    </div>

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <th>
                    Id
                </th>
                <th>
                    Type of energy
                </th>                
                <th></th>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.Id</td>
                        <td width="70%">@obj.EnergyName</td>                        
                        <td class="text-center">
                            <a asp-controller="Energy" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-primary-custom mx-2">
                                Edit
                            </a>
                            <a asp-controller="Energy" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }   
    else
    {
        <p class="text-danger h4">The list of energy types is empty!</p>
    }
</div>