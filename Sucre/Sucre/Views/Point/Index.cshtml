@model IEnumerable<Sucre_Models.PointTableM>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Points - Index";
}

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List Оf Мetering Points</h2>
        </div>
        <div class="col-6 text-end">           
            <a asp-controller="Point" asp-action="Upsert" class="btn btn-primary-custom">
                Add metering point
            </a>
        </div>
    </div>

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <th>Id</th>
                <th>Name</th>
                <th>Energy</th>
                <th>Location</th>
                <th></th>
            </thead>
            
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="5%">@obj.Id</td>
                        <td width="30%">@obj.Name</td>                        
                        <td width="15%">@obj.EnergyName</td>
                        <td width="20%">@obj.CexName</td>
                        
                        <td class="text-center">
                            <a asp-controller="Point" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-primary-custom mx-2">
                                Edit
                            </a>
                            <a asp-controller="Point" asp-action="PointCannalesIndex" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                Cannales
                            </a>
                            <a asp-controller="Point" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger-custom mx-2">
                                Delete
                            </a>                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }   
    else
    {
        <p class="text-danger h4">The list of metering point is empty!</p>
    }
</div>